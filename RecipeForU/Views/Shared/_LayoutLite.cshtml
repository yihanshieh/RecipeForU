<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Foodeiblog Template">
    <meta name="keywords" content="Foodeiblog, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>@AppService.AppName - @ViewBag.Title</title>
    <link rel="icon" href="@Url.Content("~/foodeiblog/img/icon_pan.svg")" type="image/x-icon">

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
    @RenderSection("style", required: false)

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;700;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300,400,600,700,800,900&display=swap"
          rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Unna:400,700&display=swap" rel="stylesheet">

    <!-- Css Styles -->
    <link rel="stylesheet" href="@Url.Content("~/foodeiblog/css/font-awesome.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/foodeiblog/css/elegant-icons.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/foodeiblog/css/owl.carousel.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/foodeiblog/css/slicknav.min.css")" type="text/css">
    <link rel="stylesheet" href="@Url.Content("~/foodeiblog/css/style.css")" type="text/css">
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    <div class="humberger__menu__overlay"></div>
    <div class="humberger__menu__wrapper">
        <div class="humberger__menu__logo">
            <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/foodeiblog/img/humberger/humberger-logo.png")" alt=""></a>
            <p class="mt-3">利用現有食材，為您量身打造合適的食譜。</p>
        </div>

        <nav class="humberger__menu__nav mobile-menu">
            <ul>
                @if (UserAccount.Role == EnumList.LoginRole.Admin)
                {
                    @Html.Partial("~/Views/Shared/_PartialMenuAdmin.cshtml");
                    @Html.Partial("~/Views/Shared/_PartialMenuCommon.cshtml");
                }
                @if (UserAccount.Role == EnumList.LoginRole.User)
                {
                    @Html.Partial("~/Views/Shared/_PartialMenuUser.cshtml");
                    @Html.Partial("~/Views/Shared/_PartialMenuCommon.cshtml");
                }
                @if (UserAccount.Role == EnumList.LoginRole.Guest)
                {
                    @Html.Partial("~/Views/Shared/_PartialMenuGuest.cshtml");
                }
            </ul>
        </nav>

        <div id="mobile-menu-wrap"></div>
        <div class="humberger__menu__about">
            <div class="humberger__menu__title sidebar__item__title">
                <h6>關注我們</h6>
            </div>
            <div class="humberger__menu__about__social sidebar__item__follow__links">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-youtube-play"></i></a>
                <a href="#"><i class="fa fa-instagram"></i></a>
                <a href="#"><i class="fa fa-envelope-o"></i></a>
            </div>
        </div>
    </div>
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="header__top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-1 col-6 order-md-1 order-1">
                        <div class="header__humberger">
                            <i class="fa fa-bars humberger__open"></i>
                        </div>
                    </div>
                    <div class="col-lg-8 col-md-10 order-md-2 order-3">
                        <nav class="header__menu">
                        </nav>
                    </div>
                    <!--測試 -->
                   
                    <!--測試 -->
                    <!-- 會召喚藏在footer的search-model，不開新頁面 -->
                    <div class="col-lg-2 col-md-1 col-6 order-md-3 order-2">
                        <div class="header__search">
                            <i class="fa fa-search search-switch"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">

                <div class="col-lg-3 col-md-3">
                    <div class="header__social">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-youtube-play"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-envelope-o"></i></a>
                    </div>
                </div>

                <div class="col-lg-6 col-md-6">
                    <div class="header__logo">
                        <a href="@Url.Content("~/Home/index")"><img src="@Url.Content("~/foodeiblog/img/logo.png")" alt=""></a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-3">
                    @*<div class="header__btn">
                        @Html.ActionLink("後台管理", "List", "User", null, new { @class = "primary-btn" })
                    </div>*@
                </div>

            </div>
        </div>
    </header>
    <!-- Header Section End -->

    @RenderBody()
    <hr />
    @Html.Partial("~/Views/Shared/_PartialFooter.cshtml")

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <!-- Js Plugins -->
    <script src="@Url.Content("~/foodeiblog/js/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/foodeiblog/js/jquery.slicknav.js")"></script>
    <script src="@Url.Content("~/foodeiblog/js/main.js")"></script>
</body>
</html>
